import { InstallPage, UpdatePage, UninstallPage } from "ui/pages/pages.slint";
import { SideBar } from "ui/side_bar.slint";
import { InstallArgs } from "ui/pages/install_page.slint";

export { InstallArgs }

App := Window {
    preferred-width: 700px;
    preferred-height: 800px;
    title: "Espup";
    icon: @image-url("./assets/esp-rs.png");

    property <string> espup-ui-version: "x.y.z";

    HorizontalLayout {
        side-bar := SideBar {
            title: "Espup  \{espup-ui-version}";
            model: [ "Install", "Update", "Uninstall" ];
        }

        if(side-bar.current-item == 0) : InstallPage {}
        if(side-bar.current-item == 1) : UpdatePage {}
        if(side-bar.current-item == 2) : UninstallPage {}
    }
}

