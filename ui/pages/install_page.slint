import { Button, GroupBox, ComboBox, CheckBox, LineEdit, HorizontalBox  } from "std-widgets.slint";
import { Page } from "page.slint";


export global Espup := {
    property <string> xtensa-rust-version;
    property <string> export-file;
    property <string> default-host;
    // Targets
    property <bool> esp32-value: true;
    property <bool> esp32s2-value: true;
    property <bool> esp32s3-value: true;
    property <bool> esp32c2-value: true;
    property <bool> esp32c3-value: true;


    callback install();
}


export InstallPage := Page {
    title: "Install";
    description: "Install the required toolchains for developing applications in Rust for Espressif SoC's.";

    GroupBox {
        title: "Targets:";
        vertical-stretch: 0;

        HorizontalBox {
            esp32 := CheckBox {
                text: "ESP32";
                checked <=> Espup.esp32-value;
            }

            esp32s2 := CheckBox {
                text: "ESP32-S2";
                checked <=> Espup.esp32s2-value;
            }

            esp32s3 := CheckBox {
                text: "ESP32-S3";
                checked <=> Espup.esp32s3-value;
            }

            esp32c2 := CheckBox {
                text: "ESP32-C2";
                checked <=> Espup.esp32c2-value;
            }

            esp32c3 := CheckBox {
                text: "ESP32-C3";
                checked <=> Espup.esp32c3-value;
            }
        }

    }

    GroupBox {
        title: "Extra Crates:";
        vertical-stretch: 0;

        HorizontalBox {
            espflash := CheckBox {
                text: "espflash";
                checked: false;
            }

            cargo-espflash := CheckBox {
                text: "cargo-espflash";
                checked: false;
            }

            ldproxy := CheckBox {
                text: "ldproxy";
                checked: false;
                // CHECK IF ESP-IDF
            }

            sccache := CheckBox {
                text: "sccache";
                checked: false;
            }
        }

    }

    GroupBox {
        title: "Xtensa Rust Version";
        vertical-stretch: 0;

        LineEdit {
            text: Espup.xtensa-rust-version;
        }
    }

    GroupBox {
        title: "Nightly Rust Version";
        vertical-stretch: 0;

        LineEdit {
            text: "nightly";
        }
    }

    GroupBox {
        title: "Export file";
        vertical-stretch: 0;

        LineEdit {
            text: "export-esp.ps1";
        }
    }

    GroupBox {
        title: "Default Host";
        vertical-stretch: 0;
        ComboBox {
            current-value: Espup.default-host;
            model: [ "x86_64-unknown-linux", "aarch64-unknown-linux-gnu", "x86_64-apple-darwin", "aarch64-apple-darwin","x86_64-pc-windows-msvc", "x86_64-pc-windows-gnu",];
        }
    }

    // GroupBox {
    //     title: "LLVM Version";
    //     vertical-stretch: 0;

    //      ComboBox {
    //         model: ["15"];
    //     }
    // }

    GroupBox {
        title: "Log Level";
        vertical-stretch: 0;
        ComboBox {
            current-value: "info";
            model: ["debug", "info", "warn", "error"];
        }
    }

    GroupBox {
        title: "ESP-IDF Version";
        vertical-stretch: 0;

         ComboBox {
            current-value: "none";
            model: [ "none", "release/v4.4", "release/v5.0", "master", "v4.4.1", "v4.4.2", "v4.4.3"];
        }
    }

    GroupBox {
        Button {
            text: "Install";
            clicked => {
                Espup.install();
            }
        }

    }
}
